    {
        @Html.Action("Index", "CssVariables", new { Theme = Model.Theme })
    }

</head>
<body>
    <p-general>
        @Html.Partial("~/Views/Partials/Header.cshtml", Model.HeaderConfiguration)
        @RenderBody()
        @Html.Partial("~/Views/Partials/Footer.cshtml", Model.FooterConfiguration)
    </p-general>
@Html.Action("Index", "WcRender")
@RenderSection("CustomElementsDefine", required: false)
</body>
</html>