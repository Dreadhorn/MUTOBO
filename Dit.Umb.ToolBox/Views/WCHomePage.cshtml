@using ClientDependency.Core.Mvc
@using Dit.Umb.ToolBox.Models.PoCo
@using Dit.Umb.ToolBox.Mutobo
@using Umbraco.Web.Composing
@inherits Umbraco.Web.Mvc.UmbracoViewPage<Dit.Umb.ToolBox.Models.PageModels.HomePage>
@{
    Layout = "WCBasePage.cshtml";

    Html.RequiresCss("~/web-components-cms-template/src/css/variablesClassics.css");
    Html.RequiresCss($"~/web-components-cms-template/src/css/misc.css");
    Html.RequiresCss($"~/web-components-cms-template/src/css/fonts.css");
}
@section CustomElementsDefine {
    <script>
    [
        ['p-general', General],
        ['o-header', Header],
        ['a-logo', Logo],
        ['m-navigation', Navigation],
        ['o-body', Body],
        ['o-stage', Stage],
        ['o-highlight-list', HighlightList],
        ['m-highlight', Highlight],
        ['o-footer', Footer],
        ['m-flyer', Flyer],
        ['m-teaser', Teaser],
        ['o-teaser-wrapper', TeaserWrapper],
    ].forEach(element => {
        // don't define already existing customElements
        if (element && !customElements.get(element[0])) customElements.define(...element)
    })
    </script>
}
<o-body>
    @Html.RenderModules(Model.Modules)
</o-body>